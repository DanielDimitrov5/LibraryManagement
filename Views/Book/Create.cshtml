@{
    ViewData["Title"] = "Create Book";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Create Book</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" id="title" name="title" class="form-control" placeholder="Enter book title" required />
                        </div>

                        <div class="mb-3">
                            <label for="author" class="form-label">Author</label>
                            <input type="text" id="author" name="author" class="form-control" placeholder="Enter author name" required />
                        </div>

                        <div class="mb-3">
                            <label for="genreId" class="form-label">Genre</label>
                            <select id="genreId" name="genreId" class="form-select" required>
                                <option value="">Select a genre</option>
                                @foreach (var genre in ViewBag.Genres)
                                {
                                    <option value="@genre.Id">@genre.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="isbn" class="form-label">ISBN</label>
                            <input type="text" id="isbn" name="isbn" class="form-control" placeholder="Enter ISBN number" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Book</button>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

